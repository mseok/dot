[
    // windows
    {
        "key": "cmd+1",
        "command": "workbench.action.openEditorAtIndex1"
    },
    {
        "key": "cmd+2",
        "command": "workbench.action.openEditorAtIndex2"
    },
    {
        "key": "cmd+3",
        "command": "workbench.action.openEditorAtIndex3"
    },
    {
        "key": "cmd+4",
        "command": "workbench.action.openEditorAtIndex4"
    },
    {
        "key": "cmd+5",
        "command": "workbench.action.openEditorAtIndex5"
    },
    {
        "key": "cmd+6",
        "command": "workbench.action.openEditorAtIndex6"
    },
    {
        "key": "cmd+7",
        "command": "workbench.action.openEditorAtIndex7"
    },
    {
        "key": "cmd+8",
        "command": "workbench.action.openEditorAtIndex8"
    },
    {
        "key": "cmd+9",
        "command": "workbench.action.openEditorAtIndex9"
    },
    {
        "key": "ctrl+u",
        "command": "runCommands",
        "args": {
            "commands": [
                {
                    "command": "vscode-neovim.send",
                    "args": "<C-u>"
                },
                {
                    "command": "editorScroll",
                    "args": {
                        "to": "up",
                        "by": "halfPage"
                    }
                },
                {
                    "command": "cursorMove",
                    "args": {
                        "to": "viewPortCenter"
                    }
                }
            ]
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+d",
        "command": "runCommands",
        "args": {
            "commands": [
                {
                    "command": "vscode-neovim.send",
                    "args": "<C-d>"
                },
                {
                    "command": "editorScroll",
                    "args": {
                        "to": "down",
                        "by": "halfPage"
                    }
                },
                {
                    "command": "cursorMove",
                    "args": {
                        "to": "viewPortCenter"
                    }
                }
            ]
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.nextEditorInGroup",
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.previousEditorInGroup",
    },
    // {
    //     "key": "space q",
    //     "command": "workbench.action.closeActiveEditor",
    //     "when": "!editorTextFocus && !terminalFocus && !inputFocus && !inChatInput && !webviewFocus && !sideBarFocus && !auxiliaryBarFocus"
    // },
    // yank options
    {
        "key": "space y",
        "command": "runCommands",
        "args": {
            "commands": [
                {
                    "command": "vscode-neovim.send",
                    "args": "\"+y"
                }
            ]
        },
        "when": "(neovim.mode != insert && editorTextFocus)"
    },
    // extensions
    {
        "key": "ctrl+u",
        "command": "editorScroll",
        "args": {
            "to": "up",
            "by": "halfPage"
        },
        "when": "activeEditor == 'workbench.editor.extension'"
    },
    {
        "key": "ctrl+d",
        "command": "editorScroll",
        "args": {
            "to": "down",
            "by": "halfPage"
        },
        "when": "activeEditor == 'workbench.editor.extension'"
    },
    // hover
    {
        "key": "ctrl+d",
        "command": "editor.action.scrollDownHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "ctrl+u",
        "command": "editor.action.scrollUpHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "q",
        "command": "closeMarkdownPreview",
        "when": "editorHoverFocused"
    },
    {
        "key": "q",
        "command": "closeReferenceSearch",
        "when": "editorHoverFocused"
    },
    {
        "key": "q",
        "command": "editor.action.hideHover",
        "when": "editorHoverFocused"
    },
    {
        "key": "space f f",
        "command": "workbench.action.quickOpen",
        "when": "!terminalFocus && neovim.mode == normal && editorTextFocus"
    },
    {
        "key": "space f b",
        "command": "workbench.action.showAllEditors",
        "when": "!terminalFocus && neovim.mode == normal && editorTextFocus"
    },
    {
        "key": "space f r",
        "command": "workbench.action.openRecent",
        "when": "!terminalFocus && neovim.mode == normal && editorTextFocus"
    },
    // terminal
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.createTerminalEditor"
    },
    {
        "key": "ctrl+`",
        "command": "runCommands",
        "args": {
            "commands": [
                {
                    "command": "workbench.action.toggleMaximizedPanel",
                },
                {
                    "command": "workbench.action.terminal.focus",
                }
            ]
        },
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+`",
        "command": "workbench.action.togglePanel",
        "when": "terminalFocus"
    },
    // remove unnecessary parts
    {
        "key": "ctrl+l",
        "command": "-vscode-neovim.send-cmdline",
        "when": "neovim.init && neovim.mode == 'cmdline'"
    },
    {
        "key": "ctrl+l",
        "command": "-vscode-neovim.send",
        "when": "editorTextFocus && neovim.ctrlKeysNormal.l && neovim.init && neovim.mode != 'insert' && editorLangId not in 'neovim.editorLangIdExclusions'"
    },
    {
        "key": "ctrl+l",
        "command": "-vscode-neovim.send",
        "when": "editorTextFocus && neovim.ctrlKeysInsert.l && neovim.init && neovim.mode == 'insert' && editorLangId not in 'neovim.editorLangIdExclusions'"
    },
]